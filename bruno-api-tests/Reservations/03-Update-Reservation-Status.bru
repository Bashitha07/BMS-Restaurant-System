meta {
  name: Update Reservation Status (Admin)
  type: http
  seq: 3
}

put {
  url: {{baseUrl}}/api/admin/reservations/{{reservationId}}/status?status=CONFIRMED
  body: none
  auth: bearer
}

auth:bearer {
  token: {{adminToken}}
}

tests {
  test("Status code is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Reservation status updated to CONFIRMED", function() {
    if (res.getStatus() === 200) {
      expect(res.getBody().status).to.equal('CONFIRMED');
    }
  });
}
