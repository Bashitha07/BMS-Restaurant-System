meta {
  name: Get All Orders (Admin)
  type: http
  seq: 2
}

get {
  url: {{baseUrl}}/api/admin/orders
  body: none
  auth: bearer
}

auth:bearer {
  token: {{adminToken}}
}

tests {
  test("Status code is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response is array", function() {
    if (res.getStatus() === 200) {
      expect(res.getBody()).to.be.an('array');
    }
  });
  
  test("Admin can see all user orders", function() {
    if (res.getStatus() === 200) {
      const orders = res.getBody();
      expect(orders.length).to.be.greaterThan(0);
    }
  });
}
